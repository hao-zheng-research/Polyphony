{
    "naming": "HAVID-DualHand-Hierarchical-v2_pt",
    "root_data_dir": "../data",
    "dataset_name": "havid",
    "split_id": 1,
    "sample_rate": 1,
    "temporal_aug": true,
    "encoder_params": {
      "use_instance_norm": false,
      "num_layers": 12,
      "num_f_maps": 256,
      "input_dim": 2048,
      "kernel_size": 5,
      "normal_dropout_rate": 0.5,
      "channel_dropout_rate": 0.1,
      "temporal_dropout_rate": 0.1,
      "feature_layer_indices": [7, 8, 9]
    },
    "decoder_params": {
      "num_layers": 8,
      "num_f_maps": 128,
      "time_emb_dim": 512,
      "kernel_size": 5,
      "dropout_rate": 0.1
    },
    "diffusion_params": {
      "timesteps": 1000,
      "sampling_timesteps": 25,
      "ddim_sampling_eta": 1.0,
      "snr_scale": 0.5,
      "cond_types": [
        "full",
        "zero",
        "boundary03-",
        "segment=1",
        "segment=1"
      ],
      "detach_decoder": false
    },
    "refinement_params": {
      "d_model": 256,
      "num_layers": 4,
      "num_heads": 8,
      "timesteps": 100,
      "sampling_timesteps": 10
    },
    "loss_weights": {
      "encoder_ce_loss": 0.5,
      "encoder_mse_loss": 0.025,
      "encoder_boundary_loss": 0.0,
      "decoder_ce_loss": 0.5,
      "decoder_mse_loss": 0.025,
      "decoder_boundary_loss": 0.1
    },
    "hierarchical_training": {
      "base_epochs": 500,
      "refinement_epochs": 300,
      "joint_epochs": 200,
      "refinement_weight": 0.3
    },
    "batch_size": 4,
    "learning_rate": 0.0001,
    "weight_decay": 0,
    "num_epochs": 1001,
    "log_freq": 20,
    "class_weighting": true,
    "set_sampling_seed": true,
    "boundary_smooth": 3,
    "soft_label": 4,
    "log_train_results": false,
    "postprocess": {
      "type": "median",
      "value": 15
    }
  }